<%-include('../partials/header') %>

<div class="todo-card content">
  <div class="card horizontal t-card">
    <div class="card-content t-content">

      <div class="row">
        <div class="col s3">
          <div class="row">
            <a href="/today" class="todo-btn waves-effect waves-light btn">TODAY</a>
          </div>
          <div class="row">
            <a href="/week" class="todo-btn waves-effect waves-light btn">WEEK</a>
          </div>
          <div class="row">
            <a href="/year" class="todo-btn waves-effect waves-light btn">YEAR</a>
          </div>
        </div>
        <div class="col s9">
          <div>
            <ul>
              <% user.week.forEach(function(wtodo) { %>
              <li>
                <form action="/week/<%= wtodo._id %>?_method=DELETE" class="delete-form" class="btn-done"
                  method="POST">
                  <button type="submit">Done</button>
                </form>
                <a href="/week/<%=  wtodo._id %>/edit" class="show"> <%= wtodo.content %></a>
              </li>
              <% }); %>
            </ul>
          </div>
          <form action="/week" class="input-add" method="POST" autocomplete="off">
            <input placeholder="Add new task" type="text" name="content">
            <button class="btn waves-effect waves-light" type="submit" name="action"> Add Task
              <i class="material-icons right">create</i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %></div>